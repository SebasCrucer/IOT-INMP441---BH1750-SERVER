generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BH1750Reading {
  id        String   @id @default(uuid())
  timestamp DateTime @default(now())
  lux       Float

  @@index([timestamp])
  @@map("bh1750_readings")
}

model INMP441Reading {
  id        String   @id @default(uuid())
  timestamp DateTime @default(now())
  samples   Json     // Array de valores de amplitud

  @@index([timestamp])
  @@map("inmp441_readings")
}

